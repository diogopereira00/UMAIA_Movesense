<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="80dp"
    android:layout_margin="10dp"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardCornerRadius="@dimen/dp_10"
    app:cardElevation="3dp">


    <RelativeLayout
        android:id="@+id/cardView"
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginBottom="@dimen/dp_3"
        android:foreground="?android:attr/selectableItemBackground">

        <FrameLayout
            android:id="@+id/fl_image"
            android:layout_width="80dp"
            android:layout_height="match_parent">

            <FrameLayout
                android:layout_width="90dp"
                android:layout_height="80dp"
                android:layout_gravity="center_horizontal">

                <ImageView
                    android:id="@+id/iv_imagem"
                    android:layout_width="70dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:background="@drawable/ic_baseline_quiz_24"
                    android:backgroundTint="@color/primary"
                    android:scaleType="centerInside" />


            </FrameLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginTop="5dp"
                android:layout_marginBottom="5dp"
                android:background="?android:colorPrimary" />
        </FrameLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="69dp"
            android:layout_centerVertical="true"
            android:layout_marginStart="@dimen/dp_10"
            android:layout_toRightOf="@id/fl_image">

            <TextView
                android:id="@+id/nome"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Questionario 1"
                android:textColor="?android:textColorPrimary"
                android:textSize="20sp" />

            <TextView
                android:id="@+id/estudo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/nome"
                android:text="Estudo sobre assas"
                android:textColor="@color/Cinza"
                android:textSize="16sp" />


            <TextView
                android:id="@+id/tempoEstimado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/estudo"
                android:layout_alignParentRight="true"
                android:layout_marginRight="10dp"
                android:text="5 min"
                android:textColor="@color/Cinza"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/estado"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/estudo"
                android:text="Abre a 24/12/2022 09:00:00"
                android:textColor="@color/Cinza"
                android:textSize="14sp" />

        </RelativeLayout>
    </RelativeLayout>

</androidx.cardview.widget.CardView>